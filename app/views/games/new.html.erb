<h1>New Game</h1>

<ul class="list">
  <% @grid.each do |letter| puts letter %>
     <li class="format"><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <label for="user">Try a word</label>
  <input type="text" name="word" placeholder="Try a word">
  <input type="submit" value="Go!">
</form>
